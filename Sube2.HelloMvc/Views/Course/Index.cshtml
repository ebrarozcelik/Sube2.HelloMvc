@model IEnumerable<Ders>
@{
    ViewData["Title"] = "Index";
}

<h1>Ders İşlemleri</h1>
<a asp-action="AddCourse" asp-controller="Course" class="btn btn-outline-primary">Ders Ekle</a>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Ders Adı</th>
            <th>Kredi</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Dersid</td>
                <td>@item.Dersad</td>
                <td>@item.Kredi</td>
                <td>
                    <a class="btn btn-sm btn-outline-success" href="/Course/EditCourse/@item.Dersid">Düzenle</a>
                    <a onclick="return confirm('Emin misiniz?')" class="btn btn-sm btn-outline-danger" href="/Course/DeleteCourse/@item.Dersid">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>