@model Ogrenci
@{
    ViewBag.Title = "Ders Atama";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Ders Atama</h2>

<div>
    <h4>Öğrenci: @Model.Ad</h4>
    <hr />
    @using (Html.BeginForm("AssignCourseStudent", "Student", FormMethod.Get))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.Ogrenciid)

        <div class="form-group">
            @Html.DropDownList("CourseId", ViewBag.CourseId as SelectList, "Ders Seçiniz", new { @class = "form-control" })
        </div>
        <div class="form-group">
            <input type="submit" value="Ata" class="btn btn-primary" />
        </div>
    }
</div>

<div>
    @Html.ActionLink("Geri", "Index")
</div>
